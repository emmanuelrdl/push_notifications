
<div class="container">



  <%=  simple_form_for @push_campaign do |f| %>
      <% if @push_campaign.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@push_campaign.errors.count, "error") %> prohibited this user from being saved:</h2>

            <ul>
              <% @push_campaign.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
        <%= f.input :fr_message, as: :text  %>
        <%= f.input :eng_message, as: :text %>
        <%= f.input :page, collection:  PushCampaign::SCREENS_TO_DISPLAY, include_blank: true %>
        <%= f.input :vendor,  collection: PushCampaign::VENDORS, include_blank: true %>
        <%= f.input :language, collection:  PushCampaign::LANGUAGES, include_blank: false%>
        <%= f.input :target_registration_state, collection:  PushCampaign::REGISTRATION_SATE,  include_blank: true , input_html: {id:'coucou'} %>
        <%= f.input :target_users_age, collection: PushCampaign::AGE_GROUPS, include_blank: true  %>
        <%= f.input :target_users_gender,collection:  PushCampaign::GENDERS, include_blank: true  %>
        <%= f.input :expire_at,  as: :datetime %>
        <%= f.input :delivery_at,  as: :datetime %>
        <%= f.button :submit, class:'btn btn-primary' %>

  <% end %>

</div>